<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools">
    <TextView
            android:id="@+id/tv_cart_subtotal"
            tools:text="@string/cart_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dim_16dp"
            android:textSize="@dimen/dim_18sp"
            android:textColor="@color/baseColorName"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@+id/tv_carttotal_price"
            app:layout_constraintBottom_toBottomOf="@+id/tv_carttotal_price"
            app:layout_constraintEnd_toStartOf="@+id/tv_carttotal_price"/>

    <TextView
            android:id="@+id/tv_carttotal_price"
            tools:text="$ 78.99"
            android:textColor="@color/baseColorName"
            android:textStyle="bold"
            android:layout_margin="@dimen/dim_16dp"
            android:textSize="@dimen/dim_18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>